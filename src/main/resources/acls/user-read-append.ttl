@prefix acl: <http://www.w3.org/ns/auth/acl#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .

<#restricted> a acl:Authorization ;
              acl:agent "${user}" ;
              acl:mode acl:Read;
              acl:mode acl:Append;
              acl:default <${resource}> ;
              acl:accessTo <${resource}> .