<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Fedora API Specification Test Suite">

  <listeners>
    <listener class-name='org.fcrepo.spec.testsuite.report.HtmlReporter'/>
    <listener class-name="org.fcrepo.spec.testsuite.report.EarlReporter"/>
  </listeners>

  <!--Set console logging with 'verbose' values from 1-10 (10 is most verbose)-->
  <test name="Fedora API Specification Tests" verbose="1">

    <groups>
      <define name="all">
        <include name="MUST"/>
        <include name="SHOULD"/>
        <include name="MAY"/>
        <include name="MUST NOT"/>
        <include name="SHOULD NOT"/>
      </define>
      <define name="must">
        <include name="MUST"/>
      </define>
      <define name="should">
        <include name="SHOULD"/>
      </define>
      <define name="may">
        <include name="MAY"/>
      </define>
      <define name="mustnot">
        <include name="MUST NOT"/>
      </define>
      <define name="shouldnot">
        <include name="SHOULD NOT"/>
      </define>
    </groups>

    <classes>
      <class name="org.fcrepo.spec.testsuite.test.SetUpSuite"/>
      <class name="org.fcrepo.spec.testsuite.test.Container">
        <!--Specify methods to 'include' or 'exclude'-->
        <!--
        <methods>
          <include name="ldpcMembershipTriples"/>
          <include name="ldpcMinimalContainerTriples"/>
        </methods>
        -->
      </class>
      <class name="org.fcrepo.spec.testsuite.test.Ldpnr"/>
      <class name="org.fcrepo.spec.testsuite.test.HttpGet"/>
      <class name="org.fcrepo.spec.testsuite.test.HttpHead"/>
      <class name="org.fcrepo.spec.testsuite.test.HttpOptions"/>
      <class name="org.fcrepo.spec.testsuite.test.HttpPost"/>
      <class name="org.fcrepo.spec.testsuite.test.HttpPut"/>
      <class name="org.fcrepo.spec.testsuite.test.HttpPatch"/>
      <class name="org.fcrepo.spec.testsuite.test.HttpDelete"/>
      <class name="org.fcrepo.spec.testsuite.test.ExternalBinaryContent"/>
    </classes>

  </test>

</suite>
